@model Akademik.Models.PERKULIAHAN
@using System.Linq;
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Perkuliahan", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
<div class="form-group">
    @if (Model.NIM != null)
    {
        @Html.LabelFor(model => model.NIM, new { @class = "control-label" })
        @Html.EditorFor(model => model.NIM, new { htmlAttributes = new { @class = "form-control", @readonly = "true", maxlength = "25" } })

        <input type="hidden" name="hm" id="hm" value="1" />
    }
    else
    {
        @Html.LabelFor(model => model.NIM, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.NIM, new SelectList(Model.namamahasiswa, "NIM", "NIM", "SELECT"), new { @class = "form-control" })

        <input type="hidden" name="hm" id="hm" value="0" />
    }

</div>
<div class="form-group">


    @if (Model.NIM != null)
    {
        @Html.LabelFor(model => model.KODE_MK, new { @class = "control-label" })
        @Html.EditorFor(model => model.KODE_MK, new { htmlAttributes = new { @class = "form-control", @readonly = "true", maxlength = "25" } })
        
    }
    else
    {
        @Html.LabelFor(model => model.KODE_MK, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.KODE_MK, new SelectList(Model.listmk, "KODE_MK", "KODE_MK", "SELECT"), new { @class = "form-control" })

    }


</div>

<div class="form-group">

    @if (Model.NIM != null)
    {
        @Html.LabelFor(model => model.NIP, new { @class = "control-label" })
        @Html.EditorFor(model => model.NIP, new { htmlAttributes = new { @class = "form-control", @readonly = "true", maxlength = "25" } })

    }
    else
    {
        @Html.LabelFor(model => model.NIP, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.NIP, new SelectList(Model.listdosen, "NIP", "NIP", "SELECT"), new { @class = "form-control" })

    }


</div>
    
    <div class="form-group">

        @Html.LabelFor(model => model.NILAI, new { @class = "control-label" })
       

        @Html.DropDownList("NILAI", new List<SelectListItem>
{
   new SelectListItem{ Text="A", Value = "A" },
   new SelectListItem{ Text="B", Value = "B" },
   new SelectListItem{ Text="C", Value = "C" },
   new SelectListItem{ Text="D", Value = "D" },
   new SelectListItem{ Text="E", Value = "E" },
}, new { @class = "form-control" })

    </div>


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
