@model Akademik.Models.MAHASISWA
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "MAHASISWA", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
<div class="form-group">
    @Html.LabelFor(model => model.NIM, new { @class = "control-label" })
    @Html.EditorFor(model => model.NIM, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "9" } })
    @Html.ValidationMessageFor(model => model.NIM) 
    @if (Model.NIM != null)
    {
       <input type="hidden" name="hm" id="hm" value="1" />
    }
    else
    {
        <input type="hidden" name="hm" id="hm" value="0" />
    }

</div>
    <div class="form-group">
        @Html.LabelFor(model => model.NAMA_MHS, new { @class = "control-label" })
        @Html.EditorFor(model => model.NAMA_MHS, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "25" } })
        @Html.ValidationMessageFor(model => model.NAMA_MHS)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TGL_LAHIR, new { @class = "control-label" })
        @Html.EditorFor(model => model.TGL_LAHIR, new { htmlAttributes = new { @class = "form-control", required = "required", @type = "date" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ALAMAT, new { @class = "control-label" })
        @Html.EditorFor(model => model.ALAMAT, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "50" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.JENIS_KELAMIN, new { @class = "control-label" })


        @Html.DropDownList("JENIS_KELAMIN", new List<SelectListItem>
{
   new SelectListItem{ Text="LAKI-LAKI", Value = "LAKI-LAKI" },
   new SelectListItem{ Text="PEREMPUAN", Value = "PEREMPUAN" },
}, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}