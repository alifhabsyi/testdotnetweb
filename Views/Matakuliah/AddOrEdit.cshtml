@model Akademik.Models.MATAKULIAH
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Matakuliah", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.KODE_MK, new { @class = "control-label" })
        @Html.EditorFor(model => model.KODE_MK, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "6" } })
        @Html.ValidationMessageFor(model => model.KODE_MK)
        @if (Model.KODE_MK != null)
        {
            <input type="hidden" name="hm" id="hm" value="1" />
        }
        else
        {
            <input type="hidden" name="hm" id="hm" value="0" />
        }

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NAMA_MK, new { @class = "control-label" })
        @Html.EditorFor(model => model.NAMA_MK, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "20" } })
        @Html.ValidationMessageFor(model => model.NAMA_MK)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SKS, new { @class = "control-label" })
        @Html.EditorFor(model => model.SKS, new { htmlAttributes = new { @class = "form-control", required = "required" ,@type="number"} })
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}